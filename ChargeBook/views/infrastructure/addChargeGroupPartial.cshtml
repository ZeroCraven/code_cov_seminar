<div class="modal" id="addChargeGroup-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ladegruppe hinzufügen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="infrastructure" asp-action="createChargeGroup" onsubmit="$('#addChargeGroup-modal').modal('hide');$('#maxChargePower').val(Math.round(($('#maxChargePower').val() * 1000)));">
                <div class="modal-body">
                    <input type="hidden" name="location" value="@ViewData["locationName"]" />
                    <div class="form-group">
                        <label for="chargeGroupName">Bezeichnung (bis zu 3 Buchstaben):</label>
                        <input type="text" class="form-control" name="chargeGroupName" id="chargeGroupName"/>
                    </div>
                    <div class="form-group">
                        <label for="newPassword">Maximale Ladekapazität in kW:</label>
                        <input type="number" class="form-control" id="maxChargePower" name="maxChargePower" step="any">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                    <input type="submit" class="btn btn-primary" value="Ladegruppe speichern" id="createChargeGroup-submit"/>
                </div>
            </form>
        </div>
    </div>
</div>
