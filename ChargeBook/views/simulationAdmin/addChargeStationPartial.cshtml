<div class="modal fade" id="addChargeStation-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ladegruppe hinzufügen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="SimulationAdmin" asp-action="createChargeStation">
                <div class="modal-body">
                    <input type="hidden" id="chargeGroupName" name="chargeGroupName" value="" />
                    <div class="form-group">
                        <label for="chargeStationName">Bezeichnung (bis zu 3 Ziffern):</label>
                        <input type="text" class="form-control" name="chargeStationName" id="chargeStationName"/>
                    </div>
                    <div class="form-group">
                        <label for="chargeStationTypeName">Modell:</label>
                        <select class="form-control" name="chargeStationTypeName" id="chargeStationTypeName" asp-items="@new SelectList(@ViewData["chargeStationTypes"] as List<string>)"></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Abbrechen</button>
                    <input type="submit" class="btn btn-primary" value="Ladestation speichern" id="createChargeStation-submit"/>
                </div>
            </form>
        </div>
    </div>
</div>