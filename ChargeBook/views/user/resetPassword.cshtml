@model ChargeBook.viewModels.userViewModels.ResetPasswordViewModel
@{
    ViewData["isAdminView"] = false;
    ViewData["title"] = "User";
}
<article>
    <div class="d-flex flex-column justify-content-center align-content-center align-items-center position-relative" style="height: 80vh">
        <div class="position-absolute" style="top: 50px">
            @* Serverseitige Validierung *@
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center m-2">
            <h2 class="mx-2 mt-1 mb-0">Passwort zurücksetzen</h2>
            <h5 class="m-0">für</h5>
            <h4 class="mx-2 mt-0 mb-1">@Model.email</h4>
        </div>
        <form asp-action="resetPassword" class="form-group form-horizontal justify-content-center m-0" id="resetPassword-form" style="width: 300px">
            <input asp-for="email" type="hidden" />
            <input asp-for="resetPasswordToken" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mx-2 my-1 d-flex flex-column align-items-center">
                <label class="font-weight-bold m-1">Neues Passwort:</label>
                <input id="password" class="form-control" asp-for="password" type="password" />
                <span asp-validation-for="password" class="text-danger mr-auto"></span>
            </div>
            <div class="form-group mx-2 my-1 d-flex flex-column align-items-center">
                <label class="font-weight-bold m-1">Neues Passwort wiederholen:</label>
                <input id="passwordRepeat" class="form-control" asp-for="passwordRepeated" type="password" />
                <span asp-validation-for="passwordRepeated" class="text-danger mr-auto"></span>
            </div>
            <div asp-validation-for="password" class="text-danger"></div>
            <div class="d-flex justify-content-center m-3">
                <input type="submit" id="resetPassword" value="Passwort zurücksetzen" class="btn btn-primary">
            </div>
        </form>
    </div>
</article>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}